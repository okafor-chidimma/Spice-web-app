@* first step is to find out what is being passed form controller to the view and in our case it is a list of categories hence line 3 *@
@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Coupon | Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="border backgroundWhite mt-5">
    <div class="row mb-3">
        <div class="col-6">
            <h2 class="text-info">Coupon List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <thead>
                    <tr>
                        <th>
                            @* Generates html sring literals for the property or display name attribute of the property if set of the model it is called on
            which in our case is category model
                            *@
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                          
                            @Html.DisplayNameFor(m => m.Discount)
                        </th>
                        <th>
                           
                            @Html.DisplayNameFor(m => m.MinimumAmount)
                        </th>
                        <th>
                           
                            @Html.DisplayNameFor(m => m.IsActive)
                        </th>
                        <th colspan="2" class="text-right">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var coupon in Model)
                    {
                    <tr>
                        <td>

                            @Html.DisplayFor(m => coupon.Name)
                        </td>
                        <td>

                            @Html.DisplayFor(m => coupon.Discount)
                        </td>
                        <td>

                            @Html.DisplayFor(m => coupon.MinimumAmount)
                        </td>
                        <td>

                            @Html.DisplayFor(m => coupon.IsActive)
                        </td>
                        <partial name="_EditDetailDelete" model="@coupon.Id" />
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Coupon in the List...</p>
        }

    </div>
</div>
