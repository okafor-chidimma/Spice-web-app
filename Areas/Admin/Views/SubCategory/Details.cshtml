@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel

@using Spice.Extensions
@{
    ViewData["Title"] = "SUb Category | Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info mt-3 mb-3">Sub Category Details</h2>

<div class="border backgroundWhite row">
    
    <div class="col-8">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select id="ddlCategoryList" disabled asp-for="SubCategory.CategoryId" class="form-control" asp-items="@Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)">
                </select>
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="SubCategory.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SubCategory.Name" disabled class="form-control" />
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-5 offset-3">
                <partial name="_DetailAndBackToListButton" model="@Model.SubCategory.Id"/>
            </div>
        </div>
    </div>
</div>
